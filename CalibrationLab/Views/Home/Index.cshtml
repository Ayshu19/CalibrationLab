@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calibration Lab</title>
    <style>
    a:hover {
  background-color: grey;
}
         body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }
        .container {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }
        nav {
            background-color: #f4f4f4;
            padding: 10px;
			padding-top: 100px;
        }
        nav ul {
            list-style-type: none;
            padding: 0;
            position: relative;
        }
		.par-ul{
			border-bottom: 0px solid;
		}
        nav ul li {
            margin-bottom: 5px;
        }
        nav ul li a {
            text-decoration: none;
            color: #333;
            display: block;
            padding: 5px 10px;
        }
        nav ul li a:hover {
            color: #000;
            font-weight: bold;
        }
        nav ul ul {
            display: none;
            top: 100%;
            left: 0;
            background-color: #f4f4f4;
            padding-left: 10px;
        }
        nav ul ul li {
            margin-bottom: 3px;
        }
        .main-content {
            flex-grow: 1;
            padding: 20px;
        }
		.main-content h2{
		    text-align-last: center;
		}
        @media (min-width: 768px) {
            .container {
                flex-direction: row;
            }
            nav {
                flex-basis: 200px;
            }
            .main-content {
                flex-basis: calc(100% - 200px);
            }
        }
        .open {
            display: block !important;
        }
    </style>
</head>
<body>

<div class="container">
    <nav>
        <ul class="par-ul">
            <li class="user-link">
                <a href="#">User</a>
                <ul>
                    <li><a href="#">Add</a></li>
                    <li><a href="#">Edit</a></li>
                    <li><a href="#">Delete</a></li>
                </ul>
            </li>
        </ul>
        <ul class="par-ul">
            <li class="user-link1">
                <a href="#">model add</a>
                <ul>
                    <li><a href="#">Transducer</a></li>
                    <li><a href="#">Transmitter</a></li>
                </ul>
            </li>
            <li><a href="#">calibration</a></li>
        </ul>
        <ul class="par-ul">
            <li class="user-link2">
                <a href="#">Facility</a>
                <ul>
                    <li><a href="#">Download</a></li>
                    <li><a href="#">Request</a></li>
                </ul>
            </li>
    </nav>
    <div class="main-content">
        <h2>Calibration Lab</h2>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const userLink = document.querySelector('.user-link > a');
        const userLink1 = document.querySelector('.user-link1 > a');
        const userLink2 = document.querySelector('.user-link2 > a');
        userLink.addEventListener('click', function(e) {
            e.preventDefault();
            const userDropdown = this.nextElementSibling; // Get the ul element next to the clicked link
            userDropdown.classList.toggle('open'); // Toggle the "open" class on the ul element
        });
        userLink1.addEventListener('click', function(e) {
            e.preventDefault();
            const userDropdown = this.nextElementSibling; // Get the ul element next to the clicked link
            userDropdown.classList.toggle('open'); // Toggle the "open" class on the ul element
        });
        userLink2.addEventListener('click', function(e) {
            e.preventDefault();
            const userDropdown = this.nextElementSibling; // Get the ul element next to the clicked link
            userDropdown.classList.toggle('open'); // Toggle the "open" class on the ul element
        });
    });
</script>

</body>
</html>
