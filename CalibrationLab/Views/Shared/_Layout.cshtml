<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CalibrationLab</title>
    <link rel="stylesheet" href="~/css/site.css" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <nav class="topnav">
        <img src="~/images/logo.jpeg" />
    </nav>
    @if (User != null && User.Identity != null && User.Identity.IsAuthenticated)
    {
        <div class="sidebar">
            <form asp-controller="Account" asp-action="Logout" method="post" class="form-inline">
                <button type="submit" class="btn btn-link nav-link" style="color: inherit; text-decoration: none;">
                    <span style="display: flex">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-log-out">
                            <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                            <polyline points="16 17 21 12 16 7"></polyline>
                            <line x1="21" y1="12" x2="9" y2="12"></line>
                        </svg>
                        <span style="place-self: center; padding: 2px">Logout</span>
                    </span>
                </button>
            </form>
            <ul class="sidebar-menu">
                <li>
                    <a href="#" class="dropdown-toggle">
                        User <span class="icon">+</span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a asp-controller="User" asp-action="Add">Add</a></li>
                        <li><a asp-controller="User" asp-action="Edit">Edit</a></li>
                        <li><a asp-controller="User" asp-action="Delete">Delete</a></li>
                    </ul>
                </li>
                <li>
                    <a href="#" class="dropdown-toggle">
                        Model Add <span class="icon">+</span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="#">Transducer</a></li>
                        <li><a href="#">Transmitter</a></li>
                        <li><a href="#">Calibration</a></li>
                    </ul>
                </li>
                <li>
                    <a href="#" class="dropdown-toggle">
                        Calibration
                    </a>
                </li>
                <li>
                    <a href="#" class="dropdown-toggle">
                        Facility <span class="icon">+</span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="#">Download</a></li>
                        <li><a href="#">Request</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    }
    <div class="main-content">

        <h1>Calibration Lab</h1>
        <div class="content">
            @RenderBody()
        </div>
    </div>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>